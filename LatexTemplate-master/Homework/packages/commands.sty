\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{commands}

% Glossaries
\RequirePackage[nopostdot, style=super4col, toc, nomain]{glossaries}
\renewcommand*{\glspostdescription}{}
\newglossary[nlg]{notation}{not}{ntn}{Symbolverzeichnis}
\newcommand{\addgloss}[2]{\newglossaryentry{#1}{type=notation,name=#1,description={#2}}}
\newcommand{\addglossmath}[3]{\newglossaryentry{#3}{type=notation,name=\ensuremath{#1},description={#2}}}
\renewcommand{\glstextformat}[1]{\ifcsdef{theglstext}{\theglstext}{#1}}
\newcommand{\glsmath}[2]{\def\theglstext{#1} \gls{#2} \undef\theglstext}
\makeglossaries

% General
\newcommand{\textover}[2]{\overset{\mathclap{\strut\text{#1}}}#2}
\newcommand{\Def}[1]{\textbf{#1}}
\newcommand{\pr}[1]{\left(#1\right)}
\newcommand{\br}[1]{\left\{#1\right\}}
\newcommand{\signature}[1]{\newline{\null\hfill \raggedleft -- \emph{#1}}}

% Sets
\addglossmath{\mathbb{N}}{Menge der natürlichen Zahlen ohne Null}{ntn:NaturalNumbers}
\newcommand{\Nats}{\glsmath{\mathbb{N}}{ntn:NaturalNumbers}}
\addglossmath{\mathbb{N}_0}{Menge der natürlichen Zahlen und Null}{ntn:NaturalNumbersWithZero}
\newcommand{\NatsZ}{\glsmath{\mathbb{N}_0}{ntn:NaturalNumbersWithZero}}
\addglossmath{\mathbb{Z}}{Menge der ganzen Zahlen}{ntn:IntegerNumbers}
\newcommand{\Ints}{\glsmath{\mathbb{Z}}{ntn:IntegerNumbers}}
\addglossmath{\mathbb{Q}}{Menge der rationalen Zahlen}{ntn:RationalNumbers}
\newcommand{\Rats}{\glsmath{\mathbb{Q}}{ntn:RationalNumbers}}
\addglossmath{\mathbb{R}}{Menge der reellen Zahlen}{ntn:RealNumbers}
\newcommand{\Reals}{\glsmath{\mathbb{R}}{ntn:RealNumbers}}
\addglossmath{\mathbb{C}}{Menge der komplexen Zahlen}{ntn:ComplexNumbers}
\newcommand{\Cmplx}{\glsmath{\mathbb{C}}{ntn:ComplexNumbers}}
\addglossmath{\mathbb{H}}{Menge der Quaternionen}{ntn:Quaternions}
\newcommand{\Quats}{\glsmath{\mathbb{H}}{ntn:Quaternions}}
\addglossmath{\mathbb{S}^d}{Sphäre im $\Reals^{d+1}$}{ntn:Sphere}
\newcommand{\Sphere}[1]{\glsmath{\mathbb{S}^{#1}}{ntn:Sphere}}
\addglossmath{\mathbb{H}_{x}}{Hemisphäre mit Pol x}{ntn:Hemisphere}
\newcommand{\Hemisphere}[1]{\glsmath{\mathbb{H}_{#1}}{ntn:Hemisphere}}
\addglossmath{{[a..b]}}{ganzzahliges Intervall, also \(\{ x \in \Ints : a \leq x \leq b \}\)}{ntn:IntegerIntervall}
\newcommand{\IntvN}[1]{\glsmath{[1..#1]}{ntn:IntegerIntervall}}
\newcommand{\IntFromTo}[2]{\glsmath{[#1..#2]}{ntn:IntegerIntervall}}
\addglossmath{\{\star\}}{Einpunktmenge}{ntn:SingSet}
\newcommand{\1}[0]{\gls{ntn:SingSet}}

% Set Operators
\addglossmath{{M}^{\times}}{Menge der invertierbaren Elemente}{ntn:SetInvs}
\newcommand{\Invs}[1]{\glsmath{{#1}^{\times}}{ntn:SetInvs}}
\addglossmath{\mathrm{Pot}}{Potenzmenge, Menge aller Teilmengen}{ntn:Pot}
\newcommand{\Pot}[1]{\gls{ntn:Pot}(#1)}
\addglossmath{\mathrm{Pot}_k}{k-Potenzmenge, Menge aller Teilmengen der Ordnung k}{ntn:PotK}
\newcommand{\PotK}[2]{\glsmath{\mathrm{Pot}_{#1}(#2)}{ntn:PotK}}
\addglossmath{X^\complement}{Komplement der Menge}{ntn:SetComplement}
\newcommand{\stcomp}[1]{\glsmath{{#1}^\complement}{ntn:SetComplement}}
\addglossmath{\subset}{nicht notwendigerweise strikte\footnotemark[1] Teilmenge}{ntn:SubsetEq}
\newcommand{\SubsetEq}{\glsmath{\subset}{ntn:SubsetEq}}
\DeclarePairedDelimiterX{\cardHelper}[1]{|}{|}{#1}
\addglossmath{\cardHelper{X}}{Kardinalität von \(X\)}{ntn:Cardinality}
\newcommand{\Card}[1]{\glsmath{\cardHelper{#1}}{ntn:Cardinality}}
\DeclareMathOperator{\quotHelper}{/}
\addglossmath{{{\textstyle X}\quotHelper{\textstyle \backsim}}}{Quotientenmenge entsprechend einer Äquivalenzrelation \(\backsim\)}{ntn:SetQuotient}
\newcommand{\Quot}[2]{\glsmath{{\textstyle #1}\quotHelper{\textstyle #2}}{ntn:SetQuotient}}

% Category Stuff
\addglossmath{\mathrm{id}, \mathrm{id}_X}{Identitätsmorphismus (auf \(X\))}{ntn:Id}
\newcommand{\Id}[1][]{\glsmath{\mathrm{id}_{#1}}{ntn:Id}}
\addglossmath{\mathrm{dom}~f}{Startmenge von \(f\)}{ntn:Source}
\newcommand{\Source}{\glsmath{\mathrm{dom} ~}{ntn:Source}}
\addglossmath{\mathrm{codom}~f}{Zielmenge von \(f\)}{ntn:Target}
\newcommand{\Target}{\glsmath{\mathrm{codom} ~}{ntn:Target}}
\addglossmath{\mathrm{Bild}~f}{Bildmenge von \(f\)}{ntn:Image}
\newcommand{\Image}{\glsmath{\mathrm{Bild} ~}{ntn:Image}}
\addglossmath{\left.f\right|_Y}{Einschränkung der Startmenge der Abbildung \(f\) auf \(Y \subseteq \Source f\)}{ntn:RestrictSource}
\newcommand{\restr}[2]{\glsmath{\left.#1\,\right|_{#2}}{ntn:RestrictSource}}
\addglossmath{\mathrm{Hom}(X,Y)}{Menge der Homomorphismen \(X \to Y\)}{ntn:Homomorphisms}
\newcommand{\Hom}[3][K]{\glsmath{\mathrm{Hom}_{#1}({#2},{#3})}{ntn:Homomorphisms}}
\addglossmath{\mathrm{Iso}(X,Y)}{Menge der Isomorphismen \(X \to Y\)}{ntn:Isomorphisms}
\newcommand{\Iso}[3][K]{\glsmath{\mathrm{Iso}_{#1}({#2},{#3})}{ntn:Isomorphisms}}
\addglossmath{\mathrm{End}(X)}{Menge der Homomorphismen \(X \to X\)}{ntn:Endomorphisms}
\newcommand{\End}[2][K]{\glsmath{\mathrm{End}_{#1}({#2})}{ntn:Endomorphisms}}
\addglossmath{\mathrm{Aut}(X)}{Menge der Isomorphismen \(X \to X\)}{ntn:Automorphisms}
\newcommand{\Aut}[2][K]{\glsmath{\mathrm{Aut}_{#1}({#2})}{ntn:Automorphisms}}
\addglossmath{L-\mathrm{Mod}}{Kategorie der \(L\)-Moduln}{ntn:LModules}
\newcommand{\LieModules}[1][L]{\glsmath{{#1}-\mathrm{Mod}}{ntn:LModules}}

