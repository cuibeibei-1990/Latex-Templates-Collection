%% RINGPROOF
\newcommand{\modulo}[2]{%
	\FPeval{\result}{trunc(#1-(#2*trunc(#1/#2,0)),0)}\result%
}

\newcounter{ringproofcounter}
\newcounter{ringproofcountersize}
\newenvironment{ringproof}[1]
{ % begin
	\par
	\noindent
	\setcounter{ringproofcounter}{1}
	\setcounter{ringproofcountersize}{#1}
	\begin{itemize}
}{ % end
	\noindent
	\end{itemize}
}
\newcommand*{\imply}[0]{
	\item[] \textit{
	(\alph{ringproofcounter})
	\(\implies\)
	\stepcounter{ringproofcounter}
	\ifnum\the\value{ringproofcounter}>\the\value{ringproofcountersize}
	\setcounter{ringproofcounter}{1}
	\fi
	(\alph{ringproofcounter}):
	}\\
}

